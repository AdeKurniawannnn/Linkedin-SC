# SERP Aggregator Configuration
# Copy to .env and fill in your values

# Required: Bright Data API credentials
SERP_BRIGHT_DATA_API_KEY=your-api-key-here
SERP_BRIGHT_DATA_ZONE=serp_api1

# Search defaults
SERP_DEFAULT_MAX_PAGES=25
SERP_DEFAULT_CONCURRENCY=50
SERP_DEFAULT_COUNTRY=us
SERP_DEFAULT_LANGUAGE=en

# Rate limiting
SERP_RATE_LIMIT_RPS=5.0
SERP_RATE_LIMIT_BURST=10
SERP_RATE_LIMIT_MIN_RPS=0.5
SERP_RATE_LIMIT_MAX_RPS=20.0

# Circuit breaker
SERP_CIRCUIT_BREAKER_THRESHOLD=5
SERP_CIRCUIT_BREAKER_TIMEOUT=60

# Caching
SERP_CACHE_TTL=3600
SERP_CACHE_MAX_SIZE=1000

# Optional: Redis cache (leave empty for in-memory)
# SERP_REDIS_URL=redis://localhost:6379/0

# API polling
SERP_POLLING_INTERVAL=2.0
SERP_POLLING_MAX_ATTEMPTS=15
SERP_REQUEST_TIMEOUT=30

# Retry logic
SERP_MAX_RETRIES=3
SERP_RETRY_BASE_DELAY=1.0
